{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ movie.genre }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            {# <tr>
                <th>CreatedAt</th>
                <td>{{ movie.createdAt ? movie.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ movie.updatedAt ? movie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr> #}
            <tr>
                <th>Duration</th>
                <td>{{ movie.duration }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ movie.status }}</td>
            </tr>
            <tr>
                <th>Next screenings</th>
                <td>
                {% if movie.screenings|length == 0 %}
                    No screening currently.
                {% else %}
                <ul>{% for screening in movie.screenings %}
                    <li>{{ screening.time|date('d-m-Y H:i') }} in room {{ screening.room.number }}</li>
                {% endfor %}
                </ul>
                {% endif %}
                </td>
            </tr>
            <tr>
                
            </tr>
        </tbody>
    </table>
    <img src="/uploads/posters/{{ movie.posterfilename }}" height="300px" /><br />

    <a href="{{ path('movie_index') }}">back to list</a>

    <a href="{{ path('movie_edit', {'id': movie.id}) }}">edit</a>

    {{ include('movie/_delete_form.html.twig') }}
{% endblock %}
